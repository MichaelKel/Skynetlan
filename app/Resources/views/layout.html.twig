{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{  asset('bundles/core/css/main.css') }}">
{% endblock %}

{% block body %}
    <header>
        <div class="container-fluid">
            <div class="row">
                <img src="{{ asset('bundles/bootstrap/images/skynet1.jpg') }}" alt="skynet" class="src fluid">
                <div class="navbar-header">
                </div>
            </div>
        </div>
    </header>

    <!-- Каруселька -->
    <div class="container-fluid">
        <div id="carousel" class="carousel slide">
            <!-- Индикаторы слайдов-->
            <ol class="carousel-indicators">
                <li class="active" data-target="#carousel" data-slide-to="0"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <!-- Слайды-->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="{{ asset('bundles/bootstrap/images/carousel/car-slide3.jpg') }}" class="img-responsive center-block" alt="1 слайд">
                    <div class="carousel-caption">
                        <h4>First slide</h4>
                        <p>Description</p>
                    </div>
                </div>

                <div class="item">
                    <img src="{{ asset('bundles/core/img/carousel/three.jpg') }}" class="img-responsive center-block" alt="2 слайд">
                    <div class="carousel-caption">
                        <h4>Second slide</h4>
                        <p>Description</p>
                    </div>
                </div>

                <div class="item">
                    <img src="{{ asset('bundles/core/img/carousel/phone.jpg') }}" class="img-responsive center-block" alt="3 слайд">
                    <div class="carousel-caption">
                        <h4>Third slide</h4>
                        <p>Description</p>
                    </div>
                </div>
            </div>

            <!-- Стрелки переключения слайдов-->
            <a href="#carousel" class="left carousel-control text-center center-block" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>

            </a>
            <a href="#carousel" class="right carousel-control" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>



    <nav>

        <!-- Панель меню CSS-->
        <div class="container">



            <div class="navigate-bar-button center-block">


                <span><a href="{{ path('homepage') }}"><img src="{{ asset('bundles/core/img/homepage.png') }}">Главная</a></span>
                <span><a href="{{ path('skynet_news_news_index') }}"><img src="{{ asset('bundles/core/img/news.png') }}">Новости</a></span>
                <span><a href="#"><img src="{{ asset('bundles/core/img/forum_ico.png') }}">Форум</a></span>
                <span><a href="#"><img src="{{ asset('bundles/core/img/tariffs.png') }}">Тарифы</a></span>
                <span><a href="#"><img src="{{ asset('bundles/core/img/links.png') }}">Полезные ссылки</a></span>
                <span><a href="http://192.168.231.24/userstats/"><img src="{{ asset('bundles/core/img/mypc_lock.png') }}">Кабинет пользователя</a></span>
                <span><a href="{{ path('skynet_about_about_index') }}"><img src="{{ asset('bundles/core/img/fallout.png') }}">О нас</a></span>
            </div>
        </div>
    </nav>


{% block homepage %}
{% endblock %}
    {% block articles %}
{% endblock %}
    <section>
        {% block section %}
        {% endblock %}
    </section>

    {% block javascripts %}
        <script>
            $('.carousel').carousel({
                interval: 5000,
            })
        </script>
        {% endblock %}

    <footer>
        {% block footer %}
            <div class="footer">

                <p>&#169; {{ 'now' | date('Y') }} Skynet Все права защищены</p>
            </div>
        {% endblock %}
    </footer>
{% endblock %}
